<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.reba">
    <uses-feature android:name="android.hardware.camera.any" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.REBA">
        <activity android:name=".splashScreen">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".introPages.login"/>
        <activity android:name=".obording"/>
        <activity android:name=".MainActivity"/>
        <activity android:name=".settings"/>
        <activity android:name=".aboutme"/>
        <activity android:name=".helppg"/>
        <activity android:name=".introPages.resetpwd"/>
        <activity android:name=".introPages.Signup"/>
        <activity android:name=".homePage"/>

        <receiver
            android:name=".AlarmReceiver"
            android:enabled="true" />

        <service
            android:name=".NotificationService"
            android:enabled="true" />

    </application>

</manifest>